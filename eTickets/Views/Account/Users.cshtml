@model IEnumerable<UserVM>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Users";
}

@*Write code*@

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(m => user.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => user.Email)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
